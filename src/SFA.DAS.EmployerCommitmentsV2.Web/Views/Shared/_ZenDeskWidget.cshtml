@using SFA.DAS.EmployerCommitmentsV2.Configuration
@using SFA.DAS.EmployerCommitmentsV2.Web.Extensions
@inject ZenDeskConfiguration ZenDeskConfiguration

@{
    var snippetUrl = $"https://static.zdassets.com/ekr/snippet.js?key={ZenDeskConfiguration.SnippetKey}";
    var cobrowsingSnippetUrl = $"https://embed-euw1.rcrsv.io/{ZenDeskConfiguration.CobrowsingSnippetKey}?zwwi=1";
    var label = ViewBag.Title;
    if (!string.IsNullOrEmpty(ViewBag.ZenDeskLabel))
    {
        label = ViewBag.ZenDeskLabel;
    }
}

<script type="text/javascript">
    window.zESettings = {
        webWidget: {
            contactForm: {
                attachments: false
            },
            chat: {
                menuOptions: {
                    emailTranscript: false
                }
            },
            helpCenter: {
                filter: {
                    section: @ZenDeskConfiguration.SectionId
                }
            }
        }
    };
</script>
<script id="ze-snippet" src="@snippetUrl"></script>
<script id="co-snippet" src="@cobrowsingSnippetUrl"></script>
@Html.SetZendeskLabels($"App-{label}")