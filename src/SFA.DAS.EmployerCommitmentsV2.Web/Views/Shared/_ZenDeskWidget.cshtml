@using SFA.DAS.EmployerCommitmentsV2.Configuration
@using SFA.DAS.EmployerCommitmentsV2.Web.Extensions
@inject ZenDeskConfiguration ZenDeskConfiguration

@{
    var snippetUrl = $"https://static.zdassets.com/ekr/snippet.js?key={ZenDeskConfiguration.SnippetKey}";
}

<script type="text/javascript">
    window.zESettings = {
        webWidget: {
            contactForm: {
                attachments: false
            },
            chat: {
                menuOptions: {
                    emailTranscript: false
                }
            },
            helpCenter: {
                filter: {
                    section: @ZenDeskConfiguration.SectionId
                }
            }
        }
    };
</script>
<script id="ze-snippet" src="@snippetUrl"></script>
@Html.SetZendeskLabels($"App-{ViewBag.Title}")