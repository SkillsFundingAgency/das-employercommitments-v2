@inject ILinkGenerator LinkGenerator
@using SFA.DAS.CommitmentsV2.Shared.Extensions
@using SFA.DAS.CommitmentsV2.Types
@using SFA.DAS.EmployerCommitmentsV2.Web.Extensions
@using SFA.DAS.EmployerCommitmentsV2.Web.Models.Apprentice
@model SFA.DAS.EmployerCommitmentsV2.Web.Models.Apprentice.WhyStopApprenticeshipViewModel

@{
    ViewBag.Title = "Why do you want to stop this apprenticeship?";
    ViewBag.Section = "apprentices";
    ViewBag.PageId = "why-stop-apprenticeship";
    ViewBag.GaData.Vpv = "/accounts/apprentices/manage/why-stop-apprenticeship";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />
        <h1 class="govuk-heading-xl">@ViewBag.Title</h1>   
        
        <form method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="CurrentStatus" />
            <div class="govuk-form-group  @(ViewData.ModelState.IsValid ? " " : " govuk-form-group--error")">
                <fieldset class="govuk-fieldset">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(nameof(WhyStopApprenticeshipViewModel.SelectedStatusChange)))
                    {
                        <span id="error-message-@nameof(WhyStopApprenticeshipViewModel.SelectedStatusChange)" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(WhyStopApprenticeshipViewModel.SelectedStatusChange)].Errors.First().ErrorMessage
                        </span>
                    }
                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="SelectedStatusChange-LeftEmployment" name="SelectedStatusChange" type="radio" value="@WhyStopApprenticeshipViewModel.StopStatusReason.LeftEmployment">
                            <label class="govuk-label govuk-radios__label" for="SelectedStatusChange-LeftEmployment">
                                Apprentice left my employment
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="SelectedStatusChange-ChangeProvider" name="SelectedStatusChange" type="radio" value="@WhyStopApprenticeshipViewModel.StopStatusReason.ChangeProvider">
                            <label class="govuk-label govuk-radios__label" for="SelectedStatusChange-ChangeProvider">
                                Change to training provider
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="SelectedStatusChange-TrainingEnded" name="SelectedStatusChange" type="radio" value="@WhyStopApprenticeshipViewModel.StopStatusReason.TrainingEnded">
                            <label class="govuk-label govuk-radios__label" for="SelectedStatusChange-TrainingEnded">
                                Apprenticeship training has ended
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="SelectedStatusChange-Withdrawn" name="SelectedStatusChange" type="radio" value="@WhyStopApprenticeshipViewModel.StopStatusReason.Withdrawn">
                            <label class="govuk-label govuk-radios__label" for="SelectedStatusChange-Withdrawn">
                                Apprentice has withdrawn from training
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="SelectedStatusChange-NeverStarted" name="SelectedStatusChange" type="radio" value="@WhyStopApprenticeshipViewModel.StopStatusReason.NeverStarted">
                            <label class="govuk-label govuk-radios__label" for="SelectedStatusChange-NeverStarted">
                                Apprenticeship never started
                            </label>
                        </div>
                    </div>
                </fieldset>
                
            </div>
            <button id="continue-button" type="submit" class="govuk-button">Save and continue</button>

        </form>   
    </div>
</div>
@section Back
    {
    <div class="das-js-back-link"></div>
}
