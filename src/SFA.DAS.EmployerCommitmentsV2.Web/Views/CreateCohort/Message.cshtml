@using SFA.DAS.EmployerCommitmentsV2.Web.Models.CreateCohort
@model MessageViewModel

@{
    ViewData["Title"] = "Apprenticeships";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Message for your training provider</h1>
        <p class="govuk-body-l">Let <b>@Model.ProviderId</b> know what you'd like them to do next.</p>
        <form method="post" asp-controller="CreateCohort" asp-action="Message">
            
            @Html.HiddenFor(x => x.AccountLegalEntityHashedId)
            @Html.HiddenFor(x => x.ReservationId)
            @Html.HiddenFor(x => x.CourseCode)
            @Html.HiddenFor(x => x.StartMonthYear)
            @Html.HiddenFor(x => x.ProviderId)

            <div class="govuk-form-group  @(ViewData.ModelState.IsValid ? "" : "govuk-form-group--error")">
                <label class="govuk-label govuk-!-font-weight-bold" for="Message">Message (optional)</label>
                <textarea class="govuk-textarea" id="Message" name="Message" cols="40" rows="10"></textarea>
            </div>

            <button type="submit" class="govuk-button">Send</button>
        </form>

    </div>
</div>