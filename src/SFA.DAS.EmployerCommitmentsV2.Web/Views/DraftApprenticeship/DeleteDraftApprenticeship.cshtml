@model SFA.DAS.EmployerCommitmentsV2.Web.Models.DraftApprenticeship.DeleteDraftApprenticeshipViewModel
@{
    ViewData["Title"] = "Apprenticeships";
}

<div class="govuk-width-container">
    <a href="@Model.BackLink" class="govuk-back-link">Back</a>

    <main class="govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">Delete apprentice @Model.FullName's record?</h1>
                <partial name="_ValidationSummary" />

                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <div class="govuk-radios">

                            <div class="govuk-radios__item">

                                <input class="govuk-radios__input" id="confirmDelete" name="confirmDelete" type="radio" value="true">
                                <label class="govuk-label govuk-radios__label" for="confirmDelete">
                                    Yes, delete the record
                                </label>

                            </div>

                            <div class="govuk-radios__item">

                                <input class="govuk-radios__input" id="deleteRecord-false" name="confirmDelete" type="radio" value="false">
                                <label class="govuk-label govuk-radios__label" for="confirmDelete-false">
                                    No, don't delete
                                </label>

                            </div>

                        </div>
                    </fieldset>
                </div>

            </div>
        </div>

    </main>
</div>

