@using SFA.DAS.EmployerUrlHelper.Mvc
@model SFA.DAS.EmployerCommitmentsV2.Web.Models.DraftApprenticeship.AddDraftApprenticeshipViewModel

@{
    ViewData["Title"] = "Add apprentice details";
    ViewBag.GaData.Vpv = "/unapproved/cohort/apprentices/add";
    ViewBag.GaData.Org = Model.LegalEntityName;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />
        <h1 class="govuk-heading-xl">Add apprentice details</h1>
        <div class="govuk-inset-text">
            <p class="govuk-body">
                You must add the apprentice’s:
                <ul>
                    <li>first name</li>
                    <li>last name</li>
                    <li>email address</li>
                </ul>
                Fill in as many other fields as you can. You're able to return to make changes or add more information at any time.
            </p>
           <p class="govuk-body">You'll only be able to authorise payments for this apprentice once all the fields have been completed - either by yourself or your training provider.</p>
        </div>

        <form id="addApprenticeship" novalidate method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.CohortReference)

            <button type="submit" id="defaultButton" aria-hidden="true" class="govuk-visually-hidden" tabindex="-1"></button>

            <partial name="_DraftApprenticeship" for="@Model" />

            <button type="submit" id="continue-button" class="govuk-button">Save and continue</button>
        </form>

    </div>
</div>

@section Back
{
    <div class="das-js-back-link"></div>
}


