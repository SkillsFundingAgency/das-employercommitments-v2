@model SFA.DAS.EmployerCommitmentsV2.Web.Models.Cohort.DetailsViewModel

@{
    ViewData["Title"] = "Approve apprentices' details";
}

<h1 class="govuk-heading-xl">Approve @Model.DraftApprenticeships.Count apprentices' details</h1>


<p><strong>Organisation:</strong> @Model.LegalEntityName</p>
<p><strong>Reference:</strong> @Model.CohortReference</p>

<p><strong>Message from @Model.ProviderName:</strong></p>
<div class="govuk-inset-text">
    <p class="govuk-body">    
        @if (string.IsNullOrWhiteSpace(@Model.Message))
        {
            <span>No message added.</span>
        }
        else
        {
            @Model.Message
        }
    </p>
</div>

@foreach (var draftApprenticeship in Model.DraftApprenticeships)
{
    <p>
        <span>@draftApprenticeship.DisplayName</span>
        -
        <span>@draftApprenticeship.DisplayDateOfBirth</span>
        -
        <span>@draftApprenticeship.DisplayTrainingDates</span>
        -
        <span>@draftApprenticeship.DisplayCost</span>
    </p>
}


